{
  "manifest_version": 3,
  "name": "Simple Job Form Filler",
  "description": "Fills basic job application fields from a saved profile.",
  "version": "0.0.1",
  "permissions": ["scripting", "storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Form Filler"
  },
  "host_permissions": ["https://*.supabase.co/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
